<!-- Title -->
<div class="row">
    <div class="col-lg-12">
        <h3>Tú búsqueda</h3>
    </div>
</div>
<!-- /.row -->

<!-- Providers -->
<div class="row">
  <% @providers.each do |provider| %>
    <div class="col-sm-6 col-md-4 col-lg-3">

      <div class="thumbnail">
        <div class="avatar text-center">
          <%= image_tag provider.photo.thumb, class:"img-md img-circle" %>
        </div>
        <div class="caption">
          <h4 class="pull-right">$24.99</h4>
          <h4><%= link_to provider.name, provider_path(provider.id) %></h4>
          <ul>
            <% provider.services.each do |service| %>
            <li><%= service.name %></li>
            <% end %>
          </ul>
          <p><%= provider.address %></p>
        </div>
        <div class="ratings">
          <p class="pull-right"><%= "#{provider.provider_reviews} evaluaciones" %></p>
          <p>
            <span class="stars" data-score=<%= provider.provider_score %>></span>
          </p>
        </div>
      </div>

    </div>
  <% end %>
</div>
<!-- /.row -->

<script>
  document.addEventListener("turbolinks:load", function() {
    $('.stars').raty({
      path: '/assets/',
      readOnly: true,
      score: function() {
        return $(this).attr('data-score');
      }
    });
  });
</script>