<!-- Jumbotron Header -->
<header class="jumbotron hero-spacer">
    <div class="row">
      <div class="col-lg-6 col-lg-offset-3">
        <div class="input-group">
          
          <div class="input-group-btn">
            <button type="button" class="btn btn-default dropdown-toggle input-lg" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <%= @services.first.name %> <span class="caret"></span>
            </button>
            <ul class="dropdown-menu">
              <% @services.each do |service| %>
                <li><%= link_to service.name, "#", 'data-value' => service.id, class:"no-follow" %></li>
              <% end %>
                <li role="separator" class="divider"></li>
                <li><%= link_to "Todos", services_index_path, , class:"no-follow" %></li>
            </ul>
          </div>

          <input type="text" class="form-control input-lg" placeholder="Ingresa una comuna">
          
          <span class="input-group-btn">
            <button class="btn btn-primary input-lg" type="button">Buscar!</button>
          </span>

        </div><!-- /input-group -->
      </div><!-- /.col-lg-6 -->
    </div><!-- /.row -->
</header>

<hr>

<!-- Title -->
<div class="row">
    <div class="col-lg-12">
        <h3>Nuevos Proveedores</h3>
    </div>
</div>
<!-- /.row -->

<!-- Providers -->
<div class="row">
  <% @providers.each do |provider| %>
    <div class="col-sm-6 col-md-4 col-lg-3">
      <div class="thumbnail">
          <img src="http://placehold.it/320x150" alt="">
          <div class="caption">
              <h4 class="pull-right">$24.99</h4>
              <h4><a href="#"><%= provider.name %></a></h4>
              <ul>
                <% provider.services.each do |service| %>
                <li><%= service.name %></li>
                <% end %>
              </ul>
          </div>
          <div class="ratings">
              <p class="pull-right">15 reviews</p>
              <p>
                  <span class="glyphicon glyphicon-star"></span>
                  <span class="glyphicon glyphicon-star"></span>
                  <span class="glyphicon glyphicon-star"></span>
                  <span class="glyphicon glyphicon-star"></span>
                  <span class="glyphicon glyphicon-star"></span>
              </p>
          </div>
      </div>
    </div>
  <% end %>
</div>
<!-- /.row -->

<script>
  $(".dropdown-menu a").on('click', function() {
    $(".dropdown-toggle").text($(this).text());
  });

  document.addEventListener("turbolinks:load", function() {
    $('.dropdown-toggle').dropdown();
    $('.no-follow').on('click', function(event)
    {
      event.preventDefault();
    })
  });
</script>